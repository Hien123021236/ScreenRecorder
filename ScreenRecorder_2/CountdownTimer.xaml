<UserControl x:Class="ScreenRecorder_2.CountdownTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenRecorder_2"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="125">
    <Grid>
        <Canvas Background="White">
            <Label Canvas.Left="31" FontWeight="Bold" >:</Label>
            <Label Canvas.Left="58" FontWeight="Bold" >:</Label>
            <TextBox Name="h" Grid.Column="0" Height="20" Width="30" Margin="5,5,75,5" Background="White" FontWeight="Bold">0</TextBox>
            <TextBox Name="m" Grid.Column="1" Height="20" Width="22" Margin="40,5,75,5" Background="White" FontWeight="Bold">1</TextBox>
            <TextBox Name="s" Grid.Column="2" Height="20" Width="22" Margin="67,5,75,5" Background="White" FontWeight="Bold">0</TextBox>
            <Rectangle Name="buttom" Stroke="Black" StrokeThickness="3" Height="24" Width="24" Canvas.Left="93" Canvas.Top="3"
                       Fill="Red"
                       RadiusX="12"
                       RadiusY="12"
                       MouseDown="bt_down"/>
        </Canvas>
    </Grid>
</UserControl>
